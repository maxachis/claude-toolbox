{
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "remoteUser": "node",
  "additionalFeatures": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },
  "postCreateCommand": {
    "project-deps": "npm install"
  },
  "comments": {
    "header": [
      "// Node/TypeScript devcontainer template",
      "// Customize: node version, package manager, forwarded ports"
    ],
    "postCreateCommand": "// Adjust based on project: npm install, pnpm install, bun install"
  }
}
