{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(*)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(ls *)",
      "Bash(cat *)"
    ],
    "deny": [
      "Bash(rm *)",
      "Bash(* --force)",
      "Bash(git push *)",
      "Bash(git reset *)",
      "Bash(sudo *)"
    ]
  },
  "preferences": {
    "autoApprove": false,
    "verboseMode": true
  }
}
